<h1><%= @cocktail.name %></h1>
<h3>Ingredients :</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> : <%= dose.description %>
      <%= link_to dose_path(dose), method: 'delete', data: {confirm: "Are you sure?"} do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </li>
  <% end %>
</ul>
<br>
<h3>Add a new ingredient :</h3>
<%= render 'doses/form' %>

